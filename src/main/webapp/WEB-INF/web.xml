<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
         https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">
    
    <display-name>DurvalCRM Frontend</display-name>
    
    <!-- Configuração para SPA Vue Router -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    
    <!-- Configuração de erro para redirecionar 404 para index.html (Vue Router) -->
    <error-page>
        <error-code>404</error-code>
        <location>/index.html</location>
    </error-page>
    
    <!-- Configuração de sessão -->
    <session-config>
        <session-timeout>30</session-timeout>
        <cookie-config>
            <http-only>true</http-only>
            <secure>true</secure>
        </cookie-config>
    </session-config>
    
    <!-- Proxy Servlet para API Backend -->
    <servlet>
        <servlet-name>ProxyServlet</servlet-name>
        <servlet-class>br.com.durvalcrm.frontend.ProxyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProxyServlet</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>
    
    <!-- SPA Routing Servlet -->
    <servlet>
        <servlet-name>SPARoutingServlet</servlet-name>
        <servlet-class>br.com.durvalcrm.frontend.SPARoutingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SPARoutingServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SPARoutingServlet</servlet-name>
        <url-pattern>/painel</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SPARoutingServlet</servlet-name>
        <url-pattern>/associados</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SPARoutingServlet</servlet-name>
        <url-pattern>/mensalidades</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SPARoutingServlet</servlet-name>
        <url-pattern>/vendas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SPARoutingServlet</servlet-name>
        <url-pattern>/doacoes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SPARoutingServlet</servlet-name>
        <url-pattern>/auth/callback</url-pattern>
    </servlet-mapping>
    
    <!-- Response Modifier Filter -->
    <filter>
        <filter-name>ResponseModifierFilter</filter-name>
        <filter-class>br.com.durvalcrm.frontend.ResponseModifierFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ResponseModifierFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>
    
    <!-- Headers de segurança -->
    <filter>
        <filter-name>SecurityHeadersFilter</filter-name>
        <filter-class>br.com.durvalcrm.frontend.SecurityHeadersFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SecurityHeadersFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <!-- MIME Types -->
    <mime-mapping>
        <extension>js</extension>
        <mime-type>application/javascript</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>css</extension>
        <mime-type>text/css</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>json</extension>
        <mime-type>application/json</mime-type>
    </mime-mapping>
</web-app>