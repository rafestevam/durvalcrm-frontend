<?xml version="1.0" encoding="UTF-8"?>
<jboss-web xmlns="http://www.jboss.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://www.jboss.com/xml/ns/javaee
           http://www.jboss.org/j2ee/schema/jboss-web_10_0.xsd"
           version="10.0">
    
    <!-- Context root da aplicação -->
    <context-root>/durvalcrm-frontend</context-root>
    
    <!-- Configuração de segurança -->
    <security-domain>other</security-domain>
    
    <!-- Configuração de encoding -->
    <default-encoding>UTF-8</default-encoding>
    
    <!-- Configuração de sessão -->
    <max-active-sessions>1000</max-active-sessions>
    
    <!-- Configuração de cookies -->
    <session-config>
        <cookie-config>
            <http-only>true</http-only>
            <secure>true</secure>
            <path>/durvalcrm-frontend</path>
        </cookie-config>
    </session-config>
</jboss-web>